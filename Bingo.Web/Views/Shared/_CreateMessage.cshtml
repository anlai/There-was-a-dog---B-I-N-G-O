<script type="text/javascript">

    var createMsgUrl = '@Url.Action("CreateMessage", "Game")';

    $(function () {

        $("#sendMsg").click(function () {

            var txt = $("#MsgTxt").val();

            $.post(createMsgUrl, { message: txt }, function (result) {
                if (result) {
                    $("#MsgTxt").val("");
                    alert("Message successfully sent!");
                }
                else { alert("There was an error sending your message."); }
            });

        });
    });

</script>

<style type="text/css">
    
    ul{list-style: none;}
    ul li { margin: .5em 0; }
    #MsgTxt {width: 400px;}
</style>


<fieldset>
    <legend>Messages</legend>

    <ul>
        <li>
            @Html.TextArea("MsgTxt")
        </li>
        <li>
            <button id="sendMsg">Send Message</button>
        </li>
    </ul>
</fieldset>