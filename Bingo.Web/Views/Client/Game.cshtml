@model Bingo.Web.Models.GameBoard

@{
    ViewBag.Title = "Game";
}

@section AdditionalScripts{
    <script src='@Url.Script("protoclass.js")'></script>
    <script src='@Url.Script("box2d.js")'></script>
    <script src='@Url.Script("bingo_balls.js")'></script>

    <link href='@Url.Css("Game.css")' rel="stylesheet" type="text/css" />
}

<h2>Game</h2>

	<div id="card_container">

        <table class="noicon">
            <thead>
                <tr>
                <th>B</th>
                <th>I</th>
                <th>N</th>
                <th>G</th>
                <th>O</th>
                </tr>
            </thead>
            <tbody>
		        @for (var i = 0; i < Model.BCol.Length; i++)
                { 
                <tr>
                <td class="b bingo_cell"><span>@Model.BCol[i]</span></td>
                <td class="i bingo_cell"><span>@Model.ICol[i]</span></td>
                <td class="n bingo_cell"><span>@Model.NCol[i]</span></td>
                <td class="g bingo_cell"><span>@Model.GCol[i]</span></td>
                <td class="o bingo_cell"><span>@Model.OCol[i]</span></td>
                </tr>
                }            
            </tbody>
        </table>



	</div>
 
	<div id="bingo_container">
	<canvas id="canvas" width="345" height="450" style="border: 1px solid black;" />
	</div>
  
	<div id="bingo_call_container">
		<input type="button" value="bingo"/>
	</div>
  
	<div id="scoreboard_container">
		&nbsp;
	</div>
  

